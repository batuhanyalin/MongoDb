@model UpdateProductDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <form method="post">
        <div class="alert alert-success">Ürün Güncelleme Sayfası</div>
        <input type="hidden" asp-for="ProductId" />
        <label>Kategori Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Kategorisi</label>
        <input type="number" asp-for="CategoryId" class="form-control" />
        <br />
        <label>Stok</label>
        <input type="number" asp-for="Stock" class="form-control" />
        <br />
        <label>Fiyat</label>
        <input type="number" asp-for="Price" class="form-control" />
        <br />
        <button class="btn btn-primary">Ürünü Güncelle</button>
    </form>
</div>