@model List<ResultProductDto>
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />
    <div class="alert alert-primary">Ürün Listesi</div>
    <br />
    <a class="btn btn-info" href="/Product/CreateProduct/">Yeni Ürün Ekle</a>
    <br />
    <br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Ürün Adı</th>
                <th>Kategori</th>
                <th>Stok Sayısı</th>
                <th>Fiyatı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.Stock</td>
                    <td>@item.Price</td>
                    <td><a class="btn btn-danger" href="/Product/DeleteProduct/@item.ProductId">Sil</a></td>
                    <td><a class="btn btn-success" href="/Product/UpdateProduct/@item.ProductId">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>